    <!-- EDITOR -->
    <template id="email_editor" name="FSON Email Editor">

        <!-- editor enabled -->
        <t t-if="email_editor_mode">

            <div id="wrapwrap">
                <!-- header>

                </header -->
                <main>
                    <!-- div id="wrap" class="container" t-ignore="True" -->
                    <div id="wrap" t-ignore="True">
                        <div id="email_designer">
                            <div class="col">
                                <div t-field="record.body_html" id="email_body_html" class="o_mail_body"/>
                            </div>
                        </div>
                    </div>
                </main>
                <!-- footer>

                </footer -->
            </div>

        </t>

        <!-- editor disabled -->
        <t t-if="not email_editor_mode">
            <t t-raw="record.body_html"/>
        </t>

