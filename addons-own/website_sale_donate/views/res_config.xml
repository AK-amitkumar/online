<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_website_sale_donate_config_settings" model="ir.ui.view">
            <field name="name">Website Sale Donate Config Settings</field>
            <field name="model">website.config.settings</field>
            <field name="inherit_id" ref="website.view_website_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Domain']" position="after">
                    <!-- Behaviour -->
                    <group string="Behaviour">
                        <label for="country_default_value"/>
                        <div name="country_default_value">
                            <div class="oe_inline">
                                <field name="country_default_value"/>
                            </div>
                        </div>
                        <label for="acquirer_default"/>
                        <div name="acquirer_default">
                            <div class="oe_inline">
                                <field name="acquirer_default"/>
                            </div>
                        </div>
                        <label for="payment_interval_default"/>
                        <div name="payment_interval_default">
                            <div class="oe_inline">
                                <field name="payment_interval_default"/>
                            </div>
                        </div>
                        <label for="payment_interval_as_selection"/>
                        <div name="payment_interval_as_selection">
                            <div class="oe_inline">
                                <field name="payment_interval_as_selection"/>
                            </div>
                        </div>
                        <label for="add_to_cart_stay_on_page"/>
                        <div name="add_to_cart_stay_on_page">
                            <div class="oe_inline">
                                <field name="add_to_cart_stay_on_page"/>
                            </div>
                        </div>
                        <label for="checkout_show_login_button"/>
                        <div name="checkout_show_login_button">
                            <div class="oe_inline">
                                <field name="checkout_show_login_button"/>
                            </div>
                        </div>
                        <label for="one_page_checkout"/>
                        <div name="one_page_checkout">
                            <div class="oe_inline">
                                <field name="one_page_checkout"/>
                            </div>
                        </div>
                        <label for="hide_shipping_address"/>
                        <div name="hide_shipping_address">
                            <div class="oe_inline">
                                <field name="hide_shipping_address"/>
                            </div>
                        </div>
                        <label for="hide_delivery_methods"/>
                        <div name="hide_delivery_methods">
                            <div class="oe_inline">
                                <field name="hide_delivery_methods"/>
                            </div>
                        </div>
                        <label for="redirect_url_after_form_feedback"/>
                        <div name="redirect_url_after_form_feedback">
                            <div class="oe_inline">
                                <field name="redirect_url_after_form_feedback"/>
                            </div>
                        </div>
                    </group>
                    <!-- Images -->
                    <group string="Images">
                        <label for="square_image_x"/>
                        <div name="square_image_x">
                            <div class="oe_inline">
                                <field name="square_image_x"/>
                            </div>
                        </div>
                        <label for="square_image_y"/>
                        <div name="square_image_y">
                            <div class="oe_inline">
                                <field name="square_image_y"/>
                            </div>
                        </div>
                    </group>
                    <!-- Checkout Pages Headers -->
                    <group string="Checkout Pages Headers">
                        <label for="cart_page_header"/>
                        <div name="cart_page_header">
                            <div class="oe_inline">
                                <field name="cart_page_header"/>
                            </div>
                        </div>
                        <label for="checkout_page_header"/>
                        <div name="checkout_page_header">
                            <div class="oe_inline">
                                <field name="checkout_page_header"/>
                            </div>
                        </div>
                        <label for="payment_page_header"/>
                        <div name="payment_page_header">
                            <div class="oe_inline">
                                <field name="payment_page_header"/>
                            </div>
                        </div>
                        <label for="confirmation_page_header"/>
                        <div name="confirmation_page_header">
                            <div class="oe_inline">
                                <field name="confirmation_page_header"/>
                            </div>
                        </div>
                    </group>
                    <!-- Checkout Steps Indicator -->
                    <group string="Checkout Step Indicator">
                        <label for="cart_indicator"/>
                        <div name="cart_indicator">
                            <div class="oe_inline">
                                <field name="cart_indicator"/>
                            </div>
                        </div>
                        <label for="checkout_indicator"/>
                        <div name="checkout_indicator">
                            <div class="oe_inline">
                                <field name="checkout_indicator"/>
                            </div>
                        </div>
                        <label for="payment_indicator"/>
                        <div name="payment_indicator">
                            <div class="oe_inline">
                                <field name="payment_indicator"/>
                            </div>
                        </div>
                        <label for="confirmation_indicator"/>
                        <div name="confirmation_indicator">
                            <div class="oe_inline">
                                <field name="confirmation_indicator"/>
                            </div>
                        </div>
                    </group>
                    <!-- small-cart-header -->
                    <group string="Small Cart">
                        <label for="small_cart_title"/>
                        <div name="small_cart_title">
                            <div class="oe_inline">
                                <field name="small_cart_title"/>
                            </div>
                        </div>
                    </group>
                    <!-- Section h3's for the custom checkout form -->
                    <group string="Checkout-Form Section Titles">
                        <label for="amount_title"/>
                        <div name="amount_title">
                            <div class="oe_inline">
                                <field name="amount_title"/>
                            </div>
                        </div>
                        <label for="checkout_title"/>
                        <div name="checkout_title">
                            <div class="oe_inline">
                                <field name="checkout_title"/>
                            </div>
                        </div>
                        <label for="delivery_title"/>
                        <div name="delivery_title">
                            <div class="oe_inline">
                                <field name="delivery_title"/>
                            </div>
                        </div>
                        <label for="payment_title"/>
                        <div name="payment_title">
                            <div class="oe_inline">
                                <field name="payment_title"/>
                            </div>
                        </div>
                    </group>
                    <!-- Buttons -->
                    <group string="Button Content">
                        <label for="button_login"/>
                        <div name="button_login">
                            <div class="oe_inline">
                                <field name="button_login"/>
                            </div>
                        </div>
                        <label for="button_logout"/>
                        <div name="button_logout">
                            <div class="oe_inline">
                                <field name="button_logout"/>
                            </div>
                        </div>
                        <label for="button_back_to_page"/>
                        <div name="button_back_to_page">
                            <div class="oe_inline">
                                <field name="button_back_to_page"/>
                            </div>
                        </div>
                        <label for="button_cart_to_data"/>
                        <div name="button_cart_to_data">
                            <div class="oe_inline">
                                <field name="button_cart_to_data"/>
                            </div>
                        </div>
                        <label for="button_data_to_payment"/>
                        <div name="button_data_to_payment">
                            <div class="oe_inline">
                                <field name="button_data_to_payment"/>
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
