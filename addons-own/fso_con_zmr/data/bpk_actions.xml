    <!-- Scheduled fetch of BPK Records for res.partner -->
    <record id="ir_cron_scheduled_set_bpk" model="ir.cron">
        <field name="name">BPK: Fetch BPK Records</field>
        <field name="priority" eval="2000" />
        <field name="active" eval="False"/>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model">res.partner</field>
        <field name="function">scheduled_set_bpk</field>
        <field name="args" eval="'()'"/>
    </record>

