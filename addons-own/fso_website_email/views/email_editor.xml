<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>


    <!-- EDITOR java script -->
    <template id="editor_js">

        <!-- Load default odoo editor java script -->
        <t t-call-assets="web.assets_common" t-css="false"/>
        <t t-call-assets="website.assets_frontend" t-css="false"/>
        <t t-call-assets="website.assets_editor" t-css="false"/>

        <!-- Load custom snippets -->
        <script t-if="snippets_template" type="text/javascript">
            //<![CDATA[
                (function () {
                    'use strict';
                    var website = openerp.website;
                    website.if_dom_contains('#email_designer', function () {
                        website.snippet.BuildingBlock.include({
                            _get_snippet_url: function () {
                                return '/fso/email/snippets?snippets_template=]]><t t-esc="snippets_template"/><![CDATA[';
                            }
                        });
                    });
                })();
            //]]>
        </script>

        <!-- Load custom CKEditor java script settings -->
        <script t-if="editor_js" type="text/javascript" t-att-src="editor_js"></script>
    </template>


    <!-- EDITOR TOOLBAR -->
    <template id="editor_toolbar" name="FSO email editor toolbar">
        <t t-if="email_editor_mode and website and menu_data">
            <nav id="oe_main_menu_navbar" class="navbar" role="navigation">

                <ul id="oe_editzone" class="nav navbar-nav hidden-xs" style="display: none;"
                    groups="base.group_website_publisher">
                    <li>
                        <button type="button" data-action="edit" class="btn btn-primary btn-xs">Edit</button>
                    </li>
                    <li>
                        <button type="button" role="button" data-toggle="collapse"
                                href="#email_template_settings" aria-expanded="false" aria-controls="collapseExample"
                                class="btn btn-default btn-xs">Show/Hide Settings</button>
                    </li>

                    <!-- Customize -->
                    <li class="dropdown" id="customize-menu" groups="base.group_website_designer">
                        <a id="customize-menu-button" class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Actions <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="/fso/email/select">Back to E-Mail Selection</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a t-att-href="'/fso/email/preview?template_id='+str(record.id) if record else ''" target="_blank">Preview</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#">Create Version</a>
                            </li>
                            <li class="dropdown-submenu">
                                <a href="#">Restore Version</a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">2018-04-03 07:35:12</a>
                                    </li>
                                    <li>
                                        <a href="#">2018-03-01 14:56:11</a>
                                    </li>
                                    <li>
                                        <a href="#">2018-03-01 08:53:41</a>
                                    </li>
                                    <li>
                                        <a href="#">2018-02-24 16:12:10</a>
                                    </li>
                                    <li>
                                        <a href="#">2018-02-24 12:58:31</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#advanced-view-editor" data-action='ace'>Edit HTML</a>
                            </li>
                        </ul>
                    </li>

                </ul>

                <ul id="oe_systray" class="nav navbar-nav navbar-right pull-right hidden-xs">

                    <!-- Mobile Preview -->
                    <li>
                        <a data-action="show-mobile-preview" href="#">
                            <span title="Mobile preview">
                                <i class="fa fa-mobile"/>
                            </span>
                        </a>
                    </li>

                    <!-- Back to Selection -->
                    <li>
                        <a href="/fso/email/select" class="btn btn-default btn-xs">Back to Selection</a>
                    </li>

                </ul>
            </nav>
        </t>
    </template>


    <!-- EDITOR -->
    <template id="email_editor" name="FSON Email Editor">
        <!-- Load Editor Toolbar -->
        <t t-call="fso_website_email.editor_toolbar"/>

        <div id="wrapwrap" class="ckediting_disabled" contenteditable="false">
            <!-- header>

            </header -->
            <!--<main>-->
                <div id="wrap" t-ignore="True">
                    
                    <!-- Basic email.template fields -->
                    <div id="email_template_settings" class="collapse in">
                        <div class="email_template_settings_content">
                            <div class="edit_info">
                                <span class="label label-danger">
                                Please press the 'Edit' button in the upper left to edit these fields!
                                </span>
                            </div>
                            <div class="form-horizontal">
                                <!-- email_from -->
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">From:</label>
                                    <div class="col-sm-7"><span t-field="record.email_from" class="form-control input-sm ckediting_enabled"/></div>
                                </div>
                                <!-- reply_to -->
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Reply To:</label>
                                    <div class="col-sm-7"><span t-field="record.reply_to" class="form-control input-sm ckediting_enabled"/></div>
                                </div>
                            </div>
                            <div class="form-horizontal">
                                <!-- subject -->
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Subject:</label>
                                    <div class="col-sm-7"><span t-field="record.subject" class="form-control ckediting_enabled"/></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Email Designer -->
                    <div id="email_designer">
                        <div class="col">
                            
                            <!-- TEMPLATE HTML
                                Must include 'body_html' field loaded by template 'fso_website_email.content'
                            -->
                            <t t-raw="0"/>
                            
                        </div>
                    </div>
                </div>
            <!--</main>-->
            <!-- footer>

            </footer -->
        </div>
        
        <!-- Load custom CK-Editor Configuration -->
        <t t-call="fso_website_email.editor_js"/>
    </template>


</data>
</openerp>
