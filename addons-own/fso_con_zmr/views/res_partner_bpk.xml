<?xml version="1.0" encoding="utf-8"?>
<openerp><data>

    <!-- BPK REQUESTS: Create form, tree and list view for the BPK Requests -->
    <record model="ir.ui.view" id="res_partner_bpk_form">
        <field name="name">res_partner_bpk_form</field>
        <field name="model">res.partner.bpk</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="BPK Request">
                <header>
                    <button name="compute_state" type="object" string="Compute BPK State"/>
                    <button name="clear_data" type="object" string="Clear Data"/>
                    <field name="state" widget="statusbar" statusbar_visible="found"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="BPKRequestCompanyID"/>
                            <field name="BPKRequestPartnerID" context="{'form_view_ref' : 'fso_con_zmr.res_partner_bpk_res_partner_form', 'tree_view_ref' : 'fso_con_zmr.res_partner_bpk_res_partner_tree'}"/>
                            <field name="LastBPKRequest"/>
                        </group>
                        <group>
                            <field name="id" readonly="True"/>
                            <field name="create_date" readonly="True"/>
                            <field name="create_uid" readonly="True"/>
                            <field name="write_date" readonly="True"/>
                            <field name="write_uid" readonly="True"/>
                        </group>
                    </group>
                    <group>
                        <group string="Last valid BPK-Request">
                            <field name="BPKRequestDate"/>
                            <field name="BPKRequestVersion"/>
                            <field name="BPKRequestFirstname"/>
                            <field name="BPKRequestLastname"/>
                            <field name="BPKRequestBirthdate"/>
                            <field name="BPKRequestZIP"/>
                        </group>
                        <group string="Last invalid BPK-Request">
                            <field name="BPKErrorRequestDate"/>
                            <field name="BPKErrorRequestVersion"/>
                            <field name="BPKErrorRequestFirstname"/>
                            <field name="BPKErrorRequestLastname"/>
                            <field name="BPKErrorRequestBirthdate"/>
                            <field name="BPKErrorRequestZIP"/>
                            <field name="BPKErrorText"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Valid BPK-Request Details">
                            <group>
                                <field name="BPKPrivate"/>
                                <field name="BPKPublic"/>
                                <field name="BPKRequestURL"/>
                                <field name="BPKResponseTime"/>
                                <field name="BPKRequestVersion"/>
                            </group>
                            <label for="bpk_request_log"/>
                            <field name="bpk_request_log"/>
                            <separator colspan="2"/>
                            <label for="BPKRequestData"/>
                            <field name="BPKRequestData"/>
                            <separator colspan="2"/>
                            <label for="BPKResponseData"/>
                            <field name="BPKResponseData"/>
                        </page>
                        <page string="Invalid BPK-Request Details">
                            <group>
                                <field name="BPKErrorCode"/>
                                <field name="BPKErrorRequestURL"/>
                                <field name="BPKErrorResponseTime"/>
                                <field name="BPKErrorRequestVersion"/>
                            </group>
                            <label for="bpkerror_request_log"/>
                            <field name="bpkerror_request_log"/>
                            <separator colspan="2"/>
                            <label for="BPKErrorRequestData"/>
                            <field name="BPKErrorRequestData"/>
                            <separator colspan="2"/>
                            <label for="BPKErrorResponseData"/>
                            <field name="BPKErrorResponseData"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_bpk_tree">
        <field name="name">res_partner_bpk_tree</field>
        <field name="model">res.partner.bpk</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="BPK Requests"
                  default_order="LastBPKRequest DESC, write_date DESC"
                  colors="red:not BPKRequestDate and BPKErrorRequestDate;orange:BPKRequestDate &lt; BPKErrorRequestDate;green:BPKRequestDate &gt; BPKErrorRequestDate">
                <field name="LastBPKRequest"/>
                <field name="BPKRequestPartnerID"/>
                <field name="BPKRequestCompanyID"/>
                <field name="BPKRequestDate" string="Last Valid Req."/>
                <field name="BPKPrivate"/>
                <field name="BPKErrorRequestDate" string="Last Invalid Req."/>
                <field name="BPKErrorCode"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_bpk_search">
        <field name="name">res_partner_bpk_search</field>
        <field name="model">res.partner.bpk</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="BPK Requests">
                <field name="BPKRequestPartnerID"/>
                <field name="BPKErrorCode"/>
                <field name="BPKPrivate"/>
                <field name="BPKPublic"/>
                <field name="BPKRequestCompanyID"/>
                <!-- maybe not needed here -->
                <field name="LastBPKRequest"/>
                <field name="BPKRequestDate"/>
                <field name="BPKRequestURL"/>
                <field name="BPKRequestFirstname"/>
                <field name="BPKRequestLastname"/>
                <field name="BPKRequestBirthdate"/>
                <field name="BPKErrorText"/>
                <field name="BPKErrorRequestDate"/>
                <field name="BPKErrorRequestURL"/>
                <field name="BPKErrorRequestFirstname"/>
                <field name="BPKErrorRequestLastname"/>
                <field name="BPKErrorRequestBirthdate"/>
                <group string="Filter by State">
                    <filter string="Found" domain="[('state','=','found')]"/>
                    <filter string="Found with old data" domain="[('state','=','found_old')]"/>
                    <filter string="Error" domain="[('state','=','error')]"/>
                </group>
                <group string="Filter by Error">
                    <filter string="No person matched" domain="[('BPKErrorCode','ilike','F230')]"/>
                    <filter string="Multiple person matched"
                            domain="['|', ('BPKErrorCode','ilike','F231'), ('BPKErrorCode','ilike','F233')]"/>
                </group>
                <group string="Group by">
                    <filter string="State" name="state" context="{'group_by':'state'}"/>
                    <filter string="Error Code" context="{'group_by':'BPKErrorCode'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Now we create actions for the new views -->
    <!-- https://www.odoo.com/de_DE/forum/hilfe-1/question/how-do-you-define-specific-not-default-views-for-each-view-mode-type-form-tree-etc-in-act-window-xml-76275 -->
    <!-- https://www.odoo.com/de_DE/forum/hilfe-1/question/multiple-create-form-views-same-model-107193 -->
    <record id="res_partner_bpk_action" model="ir.actions.act_window" >
        <field name="name">BPK Requests</field>
        <field name="res_model">res.partner.bpk</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="res_partner_bpk_search"/>
    </record>
    <record id="res_partner_bpk_tree_viewaction" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_partner_bpk_tree"/>
        <field name="act_window_id" ref="res_partner_bpk_action"/>
    </record>
    <record id="res_partner_bpk_form_viewaction" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_partner_bpk_form"/>
        <field name="act_window_id" ref="res_partner_bpk_action"/>
    </record>
    <!-- And we add the Action to a Menu with the shortcut menuitem -->
    <menuitem id="res_partner_bpk_menu" action="res_partner_bpk_action" parent="base.menu_config" sequence="1300"/>


</data></openerp>
