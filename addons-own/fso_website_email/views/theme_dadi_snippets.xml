<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Dadi Default E-Mail Theme Snippets -->
        <template id="theme_dadi_snippets"
                  name="DADI E-Mail Theme Snippets">

            <div class="scroll" t-ignore="1">

                <!-- SNIPPET MENU -->
                <ul class="nav navbar-nav nav-tabs">
                    <li class="active">
                        <a href="#snippet_email_blocks" data-toggle="tab">Snippets</a>
                    </li>
                    <li>
                        <a href="#snippet_email_fields" data-toggle="tab">Special</a>
                    </li>
                </ul>

                <!-- SNIPPETS -->
                <div class="tab-content">

                    <!-- ================ -->
                    <!-- Snippets         -->
                    <!-- ================ -->
                    <div id="snippet_email_blocks" class="tab-pane fade in active">

                        <!-- BANNER -->
                        <div>
                            <!-- Icon and name -->
                            <div class="oe_snippet_thumbnail">
                                <img class="oe_snippet_thumbnail_img"
                                     src="/fso_website_email/static/src/icons/banner.png"/>
                                <span class="oe_snippet_thumbnail_title">BANNER</span>
                            </div>
                            <!-- Content -->
                            <div class="oe_snippet_body ckediting_disabled snippet_block snippet_block_banner" contenteditable="false"
                                 style="padding:0; margin:0; border:none;" width="100%" align="center" valign="top">

                                <!-- CENTERING TABLE -->
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            <!-- FLEXIBLE CONTAINER -->
                                            <table border="0" cellpadding="0" cellspacing="0" width="600"
                                                   class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="600"
                                                        class="flexibleContainerCell">
                                                        <!-- CONTENT TABLE -->
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>
                                                                <td class="ckediting_enabled" contenteditable="true"
                                                                    valign="top">
                                                                    <a href="#">
                                                                        <img src="/fso_website_email/static/src/images/banner_600.png"
                                                                             class="flexibleImage"
                                                                             style="max-width:600px;" width="600" border="0"/>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        </div>

                        <!-- TEXT_INTRO  -->
                        <div>
                            <!-- Icon and name -->
                            <div class="oe_snippet_thumbnail">
                                <img class="oe_snippet_thumbnail_img"
                                     src="/fso_website_email/static/src/icons/text_intro.png"/>
                                <span class="oe_snippet_thumbnail_title">Text Intro</span>
                            </div>
                            <!-- Content -->
                            <div class="oe_snippet_body ckediting_disabled snippet_block snippet_block_text_intro" contenteditable="false"
                                 style="padding:0; margin:0; border:none;" width="100%" align="center" valign="top">
                                <!-- CENTERING TABLE -->
                                <!--
                                    The centering table keeps the content
                                    tables centered in the emailBody table,
                                    in case its width is set to 100%.
                                -->
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            <!-- FLEXIBLE CONTAINER -->
                                            <!--
                                                The flexible container has a set width
                                                that gets overridden by the media query.
                                                Most content tables within can then be
                                                given 100% widths.
                                            -->
                                            <table border="0" cellpadding="0" cellspacing="0" width="600"
                                                   class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="600"
                                                        class="flexibleContainerCell">
                                                        <!-- CONTENT TABLE -->
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>

                                                                <td class="textContent ckediting_enabled" contenteditable="true"
                                                                    valign="top">
                                                                    <h1>Intro</h1>
                                                                    <p>Vestibulum vitae metus sed purus elementum malesuada.
                                                                    Aliquam feugiat metus ut orci. Etiam scelerisque lacus
                                                                    eu tellus. Praesent neque est, placerat in, rhoncus nec,
                                                                    tempor eleifend, sem.
                                                                    ...
                                                                    </p>
                                                                </td>

                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </div>

                    <!-- ================ -->
                    <!-- Special          -->
                    <!-- ================ -->
                    <div id="snippet_email_fields" class="tab-pane fade">

                        <!-- TODO: Seriendruckfelder -->
                        <div>
                            <!-- Icon and name -->
                            <div class="oe_snippet_thumbnail">
                                <img class="oe_snippet_thumbnail_img"
                                     src="/website/static/src/img/blocks/block_text_block.png"/>
                                <span class="oe_snippet_thumbnail_title">Seriendruckfeld</span>
                            </div>
                            <!-- Content -->
                            <span class="oe_snippet_body ckediting_disabled dadi_drop_in_print_field pf_lastname"
                                  contentEditable="false">
                                <span class="pf_anrede">Herr</span>
                                <span class="pf_title">Dr.</span>
                                <span class="pf_firstname">Maximilian</span>
                                <span class="pf_lastname">Mustermann</span>
                            </span>
                        </div>

                    </div>

                    <!-- =============== -->
                    <!-- SNIPPET OPTIONS -->
                    <!-- =============== -->
                    <div id="snippet_options" class="hidden">

                        <!-- SNIPPETS: khma_block -->
                        <div data-snippet-option-id='khma_block'
                             data-selector=".khma_block"
                             data-selector-siblings="[data-oe-field='body_html'] > div"
                             data-selector-children="[data-oe-field='body_html']">
                        </div>

                        <!-- DROP_IN: khma_drop_in_image_340, khma_drop_in_image_50 -->
                        <div data-snippet-option-id='khma_drop_in_image_340'
                             data-selector=".khma_drop_in_image_340,
                                            .khma_drop_in_image_50"
                             data-selector-children=".khm_content"
                             data-selector-siblings=".khm_content > div">
                        </div>

                        <!-- DROP_IN: khma_drop_in_left_info_text, khma_drop_in_left_info_image -->
                        <div data-snippet-option-id='khma_drop_in_left_info'
                             data-selector=".khma_drop_in_left_info_text,
                                            .khma_drop_in_left_info_image"
                             data-selector-children=".khma_left_info"
                             data-selector-siblings=".khma_left_info > *">
                        </div>

                        <!-- DROP_IN: dadi_drop_in_print_field -->
                        <div data-snippet-option-id='dadi_drop_in_print_field'
                             data-selector=".dadi_drop_in_print_field"
                             data-selector-children=".khm_content > div"
                             data-selector-siblings=".dadi_drop_in_print_field">
                            <!-- Snippet Options Menu -->
                            <li class="dropdown-submenu" data-required="true">
                                <a href="#">Select Field</a>
                                <ul class="dropdown-menu">
                                    <li data-value="pf_anrede">
                                        <a>Anrede (Herr)</a>
                                    </li>
                                    <li data-value="pf_title">
                                        <a>Title (Dr.)</a>
                                    </li>
                                    <li data-value="pf_firstname">
                                        <a>Firstname</a>
                                    </li>
                                    <li data-value="pf_lastname">
                                        <a>Lastname</a>
                                    </li>
                                </ul>
                            </li>
                        </div>
                    </div>

                </div>
            </div>

        </template>

    </data>
</openerp>
