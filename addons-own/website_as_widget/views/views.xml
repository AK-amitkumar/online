<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_website_as_widget_config_settings" model="ir.ui.view">
            <field name="name">Website As Widget Config Settings</field>
            <field name="model">website.config.settings</field>
            <field name="inherit_id" ref="website.view_website_config_settings"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@string='Domain']" position="before">
                    <group string="Global Redirect">
                        <label for="global_redirect_url"/>
                        <div name="global_redirect_url">
                            <div class="oe_inline">
                                <field name="global_redirect_url"/>
                            </div>
                        </div>
                        <label for="global_configuration_urls"/>
                        <div name="global_configuration_urls">
                            <div class="oe_inline">
                                <field name="global_configuration_urls"/>
                            </div>
                        </div>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</openerp>
