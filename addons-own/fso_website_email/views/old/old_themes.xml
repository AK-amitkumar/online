<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <!-- BASIC FSON E-Mail Template -->
    <template id="fso_email_template_default"
              name="FSON default E-Mail Theme">&lt;!DOCTYPE html PUBLIC &quot;-//W3C//DTD XHTML 1.0 Strict//EN&quot; &quot;http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd&quot;&gt;
            <html>
                <head>
                    <t t-if="record and record.theme_head">
                        <t t-raw="record.theme_head"/>
                    </t>
                </head>
                <body>
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td width="100%" align="center" valign="top">
                                <table width="600" border="0" align="center" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td width="600" bgcolor="#e8e6e4">

                                            <!-- e-mail body -->
                                            <t t-if="record and record.body_html">
                                                <t t-raw="record.body_html"/>
                                            </t>

                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </body>
            </html>
    </template>

    <!-- KHMA FSON E-Mail Template -->
    <template id="fso_email_template_khma"
              name="KHMA E-Mail Theme">&lt;!DOCTYPE html PUBLIC &quot;-//W3C//DTD XHTML 1.0 Strict//EN&quot; &quot;http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd&quot;&gt;
        <html t-att-lang="lang and lang.replace('_', '-')"
              t-att-data-website-id="website and website.id or None"
              t-att-data-editable="'1' if editable else None"
              t-att-data-translatable="'1' if translatable else None"
              t-att-data-view-xmlid="xmlid if editable else None"
              t-att-data-main-object="repr(main_object) if editable else None"
              t-att-data-oe-company-name="res_company.name">
            <head>
                <t t-if="record and record.theme_head">
                    <t t-raw="record.theme_head"/>
                </t>
            </head>
            <body bgcolor="#e8e6e4">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="100%" align="center" valign="top">
                            <table width="600" border="0" align="center" cellpadding="0" cellspacing="0">
                                <tr>
                                    <td width="600" bgcolor="#e8e6e4">

                                        <!-- e-mail body -->
                                        <t t-if="record and record.body_html">
                                            <t t-raw="record.body_html"/>
                                        </t>

                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </body>
        </html>
    </template>

</data>
</openerp>
