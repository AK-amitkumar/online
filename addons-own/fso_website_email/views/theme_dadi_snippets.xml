<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Dadi Default E-Mail Theme Snippets -->
        <template id="theme_dadi_snippets"
                  name="DADI E-Mail Theme Snippets">

            <div class="scroll" t-ignore="1">

                <!-- SNIPPET MENU -->
                <ul class="nav navbar-nav nav-tabs">
                    <li class="active">
                        <a href="#snippet_email_blocks" data-toggle="tab">Snippets</a>
                    </li>
                    <li>
                        <a href="#snippet_email_special" data-toggle="tab">Special</a>
                    </li>
                </ul>

                <!-- SNIPPETS -->
                <div class="tab-content">

                    <!-- ================ -->
                    <!-- Snippets         -->
                    <!-- ================ -->
                    <div id="snippet_email_blocks" class="tab-pane fade in active">

                        <!-- BANNER -->
                        <div>
                            <!-- Icon and name -->
                            <div class="oe_snippet_thumbnail">
                                <img class="oe_snippet_thumbnail_img"
                                     src="/fso_website_email/static/src/icons/snippet_block_banner.png"/>
                                <span class="oe_snippet_thumbnail_title">Banner</span>
                            </div>
                            <!-- Content -->
                            <div class="oe_snippet_body ckediting_disabled snippet_block snippet_block_banner" contenteditable="false"
                                 style="padding:0; margin:0; border:none;" width="100%" align="center" valign="top">
                                <!-- CENTERING TABLE -->
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td class="ckediting_enabled" contenteditable="true"
                                            align="center" valign="top">
                                            <a href="#">
                                                <img src="/fso_website_email/static/src/images/banner_600.png"
                                                     class="flexibleImage"
                                                     style="max-width:600px;" width="600" border="0"/>
                                            </a>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        </div>

                        <!-- TEXT_INTRO  -->
                        <div>
                            <!-- Icon and name -->
                            <div class="oe_snippet_thumbnail">
                                <img class="oe_snippet_thumbnail_img"
                                     src="/fso_website_email/static/src/icons/snippet_block_text_intro.png"/>
                                <span class="oe_snippet_thumbnail_title">Intro Text</span>
                            </div>
                            <!-- Content -->
                            <div class="oe_snippet_body ckediting_disabled snippet_block snippet_block_text_intro" contenteditable="false"
                                 style="padding:0; margin:0; border:none;" width="100%" align="center" valign="top">
                                <!-- CENTERING TABLE -->
                                <!--
                                    The centering table keeps the content
                                    tables centered in the emailBody table,
                                    in case its width is set to 100%.
                                -->
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            <!-- FLEXIBLE CONTAINER -->
                                            <!--
                                                The flexible container has a set width
                                                that gets overridden by the media query.
                                                Most content tables within can then be
                                                given 100% widths.
                                            -->
                                            <table border="0" cellpadding="0" cellspacing="0" width="600"
                                                   class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="560"
                                                        class="flexibleContainerCell">
                                                        <!-- CONTENT TABLE -->
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>

                                                                <td class="textContent ckediting_enabled" contenteditable="true"
                                                                    valign="top">
                                                                    <h1>Intro</h1>
                                                                    <p>Vestibulum vitae metus sed purus elementum malesuada.
                                                                    Aliquam feugiat metus ut orci. Etiam scelerisque lacus
                                                                    eu tellus. Praesent neque est, placerat in, rhoncus nec,
                                                                    tempor eleifend, sem.
                                                                    ...
                                                                    </p>
                                                                </td>

                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </div>

                    
                    <!-- ================ -->
                    <!-- Special          -->
                    <!-- ================ -->
                    <div id="snippet_email_special" class="tab-pane fade">

                        <!-- Fundraising Studio Print Fields -->
                        <t t-call="fso_website_email.fs_print_field_snippet" />
                        <span class="snippet_menu_vertical_divider"/>

                    </div>

                    <!-- =============== -->
                    <!-- SNIPPET OPTIONS -->
                    <!-- =============== -->
                    <div id="snippet_options" class="hidden">

                        <!-- SNIPPET: snippet_block -->
                        <div data-snippet-option-id='snippet_block'
                             data-selector=".snippet_block"
                             data-selector-siblings="[data-oe-field='body_html'] > div"
                             data-selector-children="[data-oe-field='body_html']">
                            <!-- Snippet options menu -->
                            <li class="dropdown-submenu">
                                <a tabindex="-1" href="#">Background</a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-submenu">
                                        <a tabindex="-2" href="#">Strong</a>
                                        <ul class="dropdown-menu">
                                            <li data-value='dadi_bg_red'><a>Red</a></li>
                                            <li data-value='dadi_bg_green'><a>Green</a></li>
                                            <li data-value='dadi_bg_blue'><a>Blue</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-2" href="#">Light</a>
                                        <ul class="dropdown-menu">
                                            <li data-value='dadi_bg_light_grey'><a>Light Grey</a></li>
                                            <li data-value='dadi_bg_light_yellow'><a>Light Yellow</a></li>
                                            <li data-value='dadi_bg_light_blue'><a>Light Blue</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                        </div>
                        
                        <!-- SNIPPET: snippet_block foreground options -->
                        <div data-snippet-option-id='snippet_block_2'
                             data-selector=".snippet_block">
                            <!-- Snippet options menu -->
                            <li class="dropdown-submenu">
                                <a tabindex="-1" href="#">Foreground</a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-submenu">
                                        <a tabindex="-2" href="#">Strong</a>
                                        <ul class="dropdown-menu">
                                            <li data-value='dadi_fg_red'><a>Red</a></li>
                                            <li data-value='dadi_fg_green'><a>Green</a></li>
                                            <li data-value='dadi_fg_blue'><a>Blue</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-2" href="#">Light</a>
                                        <ul class="dropdown-menu">
                                            <li data-value='dadi_fg_light_grey'><a>Light Grey</a></li>
                                            <li data-value='dadi_fg_light_yellow'><a>Light Yellow</a></li>
                                            <li data-value='dadi_fg_light_blue'><a>Light Blue</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                        </div>

                        <!-- DROP_IN: drop_in_print_field -->
                        <div data-snippet-option-id='drop_in_print_field'
                             data-selector=".drop_in_print_field"
                             data-selector-children=".ckediting_enabled,
                             .ckediting_enabled p, .ckediting_enabled pre, .ckediting_enabled strong,
                             .ckediting_enabled h1, .ckediting_enabled h2, .ckediting_enabled h3, .ckediting_enabled h4, .ckediting_enabled h5, .ckediting_enabled h6,
                             .ckediting_enabled div"
                             data-selector-siblings=".drop_in_print_field">
                            
                            <!-- Fundraising Studio Print Field Options -->
                            <t t-call="fso_website_email.fs_print_field_snippet_options"/>
                            
                        </div>

                    </div>

                </div>
            </div>

        </template>

    </data>
</openerp>
